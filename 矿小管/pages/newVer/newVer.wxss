.container{
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-items: center;
  padding: 0rpx;
}
.textContainer{
  display:flex;
  flex-direction:column;
  background-color:#f3f3f3;
  width:600rpx;
  height:80rpx;
  border: 5rpx solid #f3f3f3;
  border-radius:20rpx;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  justify-content: center;
  align-items:center
}

.textArea{
  width: 600rpx;
  height: 300rpx;
  border: 10rpx solid #f3f3f3;
  border-radius: 40rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  background-color:#f3f3f3;
}

.select_icon {
  margin-top: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

